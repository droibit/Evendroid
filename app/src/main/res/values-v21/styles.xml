<resources>

    <!-- Base application theme. -->
    <style name="DefaultAppTheme" parent="android:style/Theme.Material.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MaterialActionBar</item>
        <item name="android:actionMenuTextColor">@color/theme_default_text_primary</item>
        <item name="android:colorPrimary">@color/theme_default_primary</item>
        <item name="android:colorPrimaryDark">@color/theme_default_primary_dark</item>
    </style>
    
    <style name="MaterialActionBar" parent="android:style/Widget.Material.Light.ActionBar.Solid">
        <item name="android:background">@color/theme_default_primary</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleText</item>
        <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

    <!-- ActionBar Widget -->
    <style name="MaterialActionBarWidget" parent="android:Theme.Material">
        <item name="android:autoCompleteTextViewStyle">@android:style/Widget.Material.Light.AutoCompleteTextView</item>
        <item name="android:popupMenuStyle">@android:style/Widget.Material.Light.PopupMenu</item>
        <item name="android:dropDownListViewStyle">@android:style/Widget.Material.Light.ListView.DropDown</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>

</resources>
